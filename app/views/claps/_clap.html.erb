<!--いいねボタン-->
<% if tweet.claped_by?(current_user) %>
  <%= link_to tweet_claps_path(tweet), method: :delete, remote: true do %>
    <i class="fas fa-thumbs-up"></i><%= tweet.claps.count %>
  <% end %>
<% else %>
  <%= link_to tweet_claps_path(tweet), method: :post, remote: true do %>
    <i class="far fa-thumbs-up"></i>
  <% end %>
  <%= tweet.claps.count %>
<% end %>
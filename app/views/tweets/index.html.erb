<h1>Tweets#index</h1>
<p>Find me in app/views/tweets/index.html.erb</p>
<!--フォローしている人＋自分の投稿一覧-->
<% @tweets.each do |tweet| %>
<%= link_to user_path(tweet.user.id) do %>
<%= attachment_image_tag tweet.user, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
<% end %>
<%= tweet.user.name %>
<<!--いいねボタン-->
<% if tweet.claped_by?(current_user) %>
    <p>
      <%= link_to tweet_claps_path(tweet), method: :delete do %>
        ♥<%= tweet.claps.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to tweet_claps_path(tweet), method: :post do %>
        ♡<%= tweet.claps.count %> いいね
      <% end %>
    </p>
  <% end %>

コメント数：<%= tweet.tweet_comments.count %>
<%= link_to "tweetsのshow", tweet_path(tweet.id) %>
<% end %>


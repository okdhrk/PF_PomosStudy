<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<% @tasks.each do |task| %>
<!--タスク完了ボタン-->
<%= form_with model: @task, local:true do |f| %>
    <%= f.hidden_field :completed, value: @tasks %>
  <%= f.submit '投稿' %>
<% end %>

    <%= task.body %>
    締切日<%= I18n.l task.target_at, format: :short %>

    <%= link_to 'Show', task_path(task) %><
    <%= link_to 'Edit', edit_task_path(task) %><
    <%= link_to 'Delete', task_path(task), method: :delete %><
  <% end %>
<p><%= link_to 'ToDoの作成', new_task_path %></p>


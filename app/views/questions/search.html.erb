<%= render 'layouts/header', user: current_user %>
<div class="container pt-3 pb-3">
  <div class="row mx-auto mt-1">
    <div class="col-10 mx-auto bg-white" style="width:1%;">
      <h2 class="mt-2 pb-1 text-center">検索結果</h2>

      <div class="text-center"><%= link_to "質問する", new_question_path, class: "fas fa-edit btn btn-danger btn-lg" %></div>

        <table class="table mt-4 text-nowrap">
          <% @results.each do |result| %>
          <tr>
            <th style="width:10%">
              <%= link_to user_path(result.user.id) do %>
                <%= attachment_image_tag result.user, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
              <% end %>
              <span><%= result.user.name %>さん</span>
            </th>
            <th class="align-middle", style="width:10%">
              <% if result.is_solved == true %>
                <div class="text-danger">解決済み</div>
              <% else %>
                <div class="text-success text-center">回答<br>受付中</div>
              <% end %>
            </th>
            <th style="width:60% heigh:10%">
              <%= result.created_at.strftime('%m月%d日 %H:%M') %>
              <br>
              <div class="fas h3">
                <%= link_to question_path(result) do %>
                  <%= result.title %>
                <% end %>
              </div>
              <br>
              <div class="panel-group">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h4 class="panel-title">
                      <a data-toggle="collapse" href="#collapse<%= result.id %>" class="h5">内容を確認する</a>
                    </h4>
                  </div>
                  <div id="collapse<%= result.id %>" class="panel-collapse collapse">
                    <div class="panel-body"><%= result.body %></div>
                  </div>
                </div>
              </div>
            </th>
            <th class="align-middle", style="width:10%">
              <% if result.user == current_user %>
                <%= link_to "", question_path(result), method: :delete, "data-confirm" => "質問を削除しますか？" , class: "fas fa-trash-alt btn btn-danger btn-sm" %>
              <% end %>
            </th>
          </tr>
          <% end %>
        </table>

      <div class="float-right">
        <%= paginate @results %>
      </div>
      <%= link_to :back do %>
        <i class="fas fa-undo"></i> もどる
      <% end %>
    </div>
  </div>
</div>


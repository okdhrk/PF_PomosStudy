<h1>Questions#show</h1>
<p>Find me in app/views/questions/show.html.erb</p>

<%= link_to user_path(@question.user.id) do %>
<%= attachment_image_tag @question.user, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
<% end %>
<%= @question.user.name %>
<%= @question.title %>
<%= @question.body %>

<%= link_to "questionのedit", edit_question_path(@question) %>

<!--コメント作成フォーム-->
<%= form_with(model:[@question, @answer], local: true ) do |f| %>
<%= f.text_area :body, rows:'5', cols:'80' %>
<%= f.submit "送信" %>
<% end %>

<!--コメント一覧-->
<% @question.answers.each do |answer| %>
  <tr>
    <td>
      <%= attachment_image_tag answer.user, :image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
      <%= answer.user.name %>
    </td>
    <td>
      <%= answer.body %>
    </td>

    <td>
        <% if answer.user == current_user %>
  <div class="comment-delete">
    <%= link_to "answer削除", question_answer_path(answer.question, answer), method: :delete %>
  </div>
        <% end %>
    </td>
  </tr>
<% end %>

<%= link_to "question削除", question_path(@question), method: :delete %>


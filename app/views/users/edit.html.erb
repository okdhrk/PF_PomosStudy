<p>Find me in app/views/users/edit.html.erb</p>

<h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
  あなたに一番近いジャンルを選んでね
  <%= f.select :user_genre, User.user_genres.keys.to_a, {} %><br>
  <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :image, placeholder: "プロフィール画像" %>
  <%= f.submit "変更を保存" %>
<% end %>